<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    tools:context=".WeatherPageFragment">


    <TextView
        android:id="@+id/tV_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iV_weather_icon"
        android:layout_width="89dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/tV_temp"
        app:layout_constraintTop_toBottomOf="@id/tV_city_name"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tV_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_city_name" />

    <TextView
        android:id="@+id/tV_feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iV_weather_icon"
        app:layout_constraintTop_toBottomOf="@+id/tV_weather" />

    <TextView
        android:id="@+id/tV_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iV_weather_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tV_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/iV_wind_speed"
        app:layout_constraintTop_toBottomOf="@+id/iV_weather_icon" />

    <ImageView
        android:id="@+id/iV_wind_speed"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/wind_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iV_weather_icon" />

    <ImageView
        android:id="@+id/iV_humidity"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/humidity_img"
        app:layout_constraintStart_toEndOf="@+id/tV_wind_speed"
        app:layout_constraintTop_toBottomOf="@+id/iV_weather_icon" />

    <TextView
        android:id="@+id/tV_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/iV_humidity"
        app:layout_constraintTop_toBottomOf="@+id/iV_weather_icon" />

    <ImageView
        android:id="@+id/iV_pressure"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/pressure_img"
        app:layout_constraintStart_toEndOf="@+id/tV_humidity"
        app:layout_constraintTop_toBottomOf="@+id/iV_weather_icon" />

    <TextView
        android:id="@+id/tV_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/iV_pressure"
        app:layout_constraintTop_toBottomOf="@+id/iV_weather_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>